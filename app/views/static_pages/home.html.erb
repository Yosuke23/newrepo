<% if logged_in? %>
  <div class="row">
   <aside class="col-md-4">
    <section class="user_info">	
     <%= render 'shared/user_info' %>
    <section class="stats">
     <%= render 'shared/stats' %>
    </section>
    </section>
    <section class="micropost_form">
   	 <%= render 'shared/micropost_form' %>
    </section>
   </aside>
    <div class="col-md-8">
     <h3>自分とフォローの投稿履歴</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <% else %>
   <%= render 'not_logged_in' %>
<% end %>