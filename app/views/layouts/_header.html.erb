<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <!-- 追記ここから-->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
         <!-- 追記ここまで-->
    <%= link_to "Cherish", root_path, id: "logo" %>
    <!-- 追記ここから-->
     </div>
    <!-- 追記ここまで-->

  <nav>
        <!--id="navbar" と　navbar-collapse collapseを追記-->
    <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
       <!-- 検索バー　（cssのsearch-navクラスににスタイリング）  -->
       <!-- メニューの１つとして県検索バーを「list」に含める」-->
       <li class="search-nav">
           <%= form_tag(root_path, method: :get) do %>
        <div class="input-group">
          <%= search_field_tag "q", params[:q], class: "form-control", placeholder: "投稿内容、人物名" %>
            <span class="input-group-btn">
             <%= submit_tag "検索", class: "btn btn-default" %>
            </span>
        </div>
          <% end %>
       </li>
       <!-- メニューの１つとして県検索バーを「list」に含める」-->
       <!-- if logged_in?式には含まずいずれのヘッダーにも検索バーは表示させる仕様　-->


        <% if logged_in? %>
            <li><%= link_to "投稿する", root_path %></li>
            <li><%= link_to "他のユーザーの投稿", users_path %></li>
      <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              ユーザー情報 <b class="caret"></b>
            </a>
        <ul class="dropdown-menu">
          <li><%= link_to "自分の投稿を見る", current_user %></li>
            <li><%= link_to "登録情報変更", edit_user_path(current_user) %></li>
              <li class="divider">
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </li> 
        </ul>
      </li>
        <% else %>
            <li><%= link_to "新規登録", signup_path %></li>
            <li><%= link_to "ログイン", info_path %></li>
        <% end %>
      </ul>
  </nav>
 </div>
</header>